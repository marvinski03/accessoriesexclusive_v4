{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

<!-- TOP BAR START -->

<header id="page-header" class="top-bar fixed-top">
    <div id="ae-top-bar">
        <div class="container-max top-bar-container">
            <div class="row">
                
                <ul>

                    <li>
                        <i class="ae-icon-checkmark-circle"></i> Trusted Shops Käuferschutz
                    </li>

                    <li>
                        <i class="ae-icon-checkmark-circle"></i> Kostenfreier Versand ab 20€ Bestellwert
                    </li>

                    <li>
                        <i class="ae-icon-checkmark-circle"></i> Kauf auf Rechnung möglich
                    </li>

                    <li>
                        <i class="ae-icon-checkmark-circle"></i> Professioneller Kundenservice
                    </li>

                </ul>

            </div>
        </div>

        <div id="main-head">

            <div class="container header-content">
                <div class="row">
                    <div class="col-md-4 txt-left hidden-sm hidden-xs">



                        {% if services.customer.getContactId() > 0 %}

                              <a href="{{ urls.myAccount }}">

                                <div class="header-item-wrapper">
                                    <i class="ae-icon-user"></i><br>
                                    <span>Mein Konto</span>
                                    
                                </div>
                            </a>

                        {% else %}

                         <a data-toggle="modal" href="#login">

                                <div class="header-item-wrapper">
                                    <i class="ae-icon-user"></i><br>
                                    <span>Anmelden</span>
                                </div>
                            </a>

                        {% endif %}




                        <a href="https://www.accessories-exclusive.de/kontakt" title="Kontakt">
                            <div class="header-item-wrapper">
                                <i class="ae-icon-bubble"></i><br>
                                <span>Kontakt</span>
                            </div>
                        </a>
                    </div>


                    <div class="col-md-4 col-xs-6 txt-center logo-wrapper">
                        <a href="{{ homepageURL }}">
                            <img src="https://cdn02.plentymarkets.com/w5u2kzpj7f3t/frontend/accessories-exclusive-src/img/logo-wb-v.svg" alt="Accessories Exclusive" title="Accessories Exclusive" width="170" height="123" class="desktop-logo"/>

                             <img src="https://cdn02.plentymarkets.com/w5u2kzpj7f3t/frontend/accessories-exclusive-src/img/accessories-exclusive-logo.svg" alt="Accessories Exclusive" title="Accessories Exclusive" width="170" height="123" class="mobile-logo"/>
                        </a>
                    </div>

                    <div class="col-md-4 txt-right hidden-sm hidden-xs">
                        <a href="https://www.accessories-exclusive.de/wish-list" title="Wunschliste">
                            <div class="header-item-wrapper">
                                <i class="ae-icon-heart"></i><br>
                                <span>Wunschliste</span>
                            </div>
                        </a>
                        <a v-toggle-basket-preview href="#" class="toggle-basket-preview nav-link" @mouseover.once="$store.dispatch('loadComponent', 'basket-preview')">
                            <div class="header-item-wrapper">
                                <span id="warenkorb-qty" class="badge-right" v-basket-item-quantity="$store.state.basket.data.itemQuantity">0</span>
                                <i class="ae-icon-cart"></i><br>
                                <span>Warenkorb</span>
                            </div>
                        </a>
                    </div>
                    <div class="col-xs-6 hidden-md hidden-lg mobile-menu">

                        <a v-toggle-basket-preview href="#" class="toggle-basket-preview nav-link">
                            <div class="header-item-wrapper">
                                <span id="warenkorb-qty" class="badge-right" v-basket-item-quantity="$store.state.basket.data.itemQuantity">0</span>
                                <i class="ae-icon-cart"></i><br>
                            </div>
                        </a>

                        <lazy-load component="basket-preview">
                                                <basket-preview :show-net-prices="{{ showNetPrices | json_encode }}">
                                                    <template #before-basket-item>
                                                        {{ LayoutContainer.show("Ceres::BasketList.BeforeItem") }}
                                                    </template>
                                                    <template #after-basket-item>
                                                        {{ LayoutContainer.show("Ceres::BasketList.AfterItem") }}
                                                    </template>
                                                    <template #before-basket-totals>
                                                        {{ LayoutContainer.show("Ceres::BasketPreview.BeforeBasketTotals") }}
                                                    </template>
                                                    <template #before-item-sum>
                                                        {{ LayoutContainer.show("Ceres::BasketTotals.BeforeItemSum") }}
                                                    </template>
                                                    <template #after-item-sum>
                                                        {{ LayoutContainer.show("Ceres::BasketTotals.AfterItemSum") }}
                                                    </template>
                                                    <template #before-shipping-costs>
                                                        {{ LayoutContainer.show("Ceres::BasketTotals.BeforeShippingCosts") }}
                                                    </template>
                                                    <template #after-shipping-costs>
                                                        {{ LayoutContainer.show("Ceres::BasketTotals.AfterShippingCosts") }}
                                                    </template>
                                                    <template #before-total-sum>
                                                        {{ LayoutContainer.show("Ceres::BasketTotals.BeforeTotalSum") }}
                                                    </template>
                                                    <template #before-vat>
                                                        {{ LayoutContainer.show("Ceres::BasketTotals.BeforeVat") }}
                                                    </template>
                                                    <template #after-vat>
                                                        {{ LayoutContainer.show("Ceres::BasketTotals.AfterVat") }}
                                                    </template>
                                                    <template #after-total-sum>
                                                        {{ LayoutContainer.show("Ceres::BasketTotals.AfterTotalSum") }}
                                                    </template>
                                                    <template #after-basket-totals>
                                                        {{ LayoutContainer.show("Ceres::BasketPreview.AfterBasketTotals") }}
                                                    </template>
                                                    <template #before-checkout-button>
                                                        {{ LayoutContainer.show("Ceres::BasketPreview.BeforeCheckoutButton") }}
                                                    </template>
                                                    <template #after-checkout-button>
                                                        {{ LayoutContainer.show("Ceres::BasketPreview.AfterCheckoutButton") }}
                                                    </template>
                                                </basket-preview>
                                            </lazy-load>

                        <button id="btnMainMenuToggler" v-open-mobile-navigation class="navbar-toggler d-lg-none" type="button">
                             &#9776;
                        </button>
                    </div>
                </div>
            </div>

        </div>
        
        {% include "AccessoriesExclusive::PageDesign.Partials.Header.Navigation" %}
    
    </div>
</header>


<!-- TOP BAR END -->

<!-- breadcrumb -->
{% if not services.template.isHome() and not services.template.isMyAccount() and not services.template.isCheckout() %}
    {% include "Ceres::PageDesign.Partials.Header.Breadcrumb" %}
{% endif %}

<div class="container-max page-header">
    <div class="row">
        <div id="searchBox" class="cmp cmp-search-box collapse">
                {% set overrideSearchBar = LayoutContainer.show("Ceres::Search.SearchBar") %}
                {% if overrideSearchBar | trim is empty %}
                    <item-search></item-search>
                {% else %}
                    {{ overrideSearchBar | raw }}
                {% endif %}
            </div>

        {% if enableCurrencySelect == "true" %}
            <div id="currencySelect" class="cmp cmp-currency-select collapse">
                <div class="container-max">
                    <div class="row py-3">
                        <div class="currency-list col-12">
                            <div class="list-title">
                                <strong>{{ trans("Ceres::Template.headerCurrency") }}</strong>
                                <hr>
                            </div>
                            <ul class="row text-center text-sm-left">
                                {% for currency in services.checkout.getCurrencyList() if currency.name in activeCurrencies or activeCurrencies[0] == 'all' or currency.name == services.checkout.getCurrencyData().name %}
                                    <li class="col-2 px-0{% if currency.name == services.checkout.getCurrencyData().name %} active{% endif %}">
                                        <a class="nav-link" href="{{ queryString({"currency": currency.name}) }}" rel="nofollow">
                                            {% if currencyFormatSelect == 'all' %}
                                                {{ currency.name }} <br class="d-block d-sm-none" />({{ currency.symbol }})
                                            {% else %}
                                                {{ currency[currencyFormatSelect] }}
                                            {% endif %}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        {% endif %}

         <div id="countrySettings" class="cmp cmp-country-settings collapse">
            <div class="container-max">
                <div class="row py-3">
                    <div class="col-12 col-lg-6">

                        <div class="language-settings">
                            <div class="list-title">
                                <strong>{{ trans("Ceres::Template.headerSelectLanguage") }}</strong>
                                <hr>
                            </div>

                            {% set languageList = services.webstoreConfigurationRepository.getActiveLanguageList() %}
                            {% set languageUrls = services.url.getLanguageURLs() %}
                            <ul class="row">
                                {% for language in languageList %}
                                    <li class="col-6 col-sm-4 px-0{% if lang == language %} active{% endif %}">
                                        <a class="nav-link" href="{% if languageUrls[language] is defined %}{{ languageUrls[language] ~ queryString() }}{% elseif language != defaultLanguage %}/{{ language }}{{ xfurls.trailingSlashSuffix }}{% else %}/{% endif %}" data-update-url>
                                            <i class="flag-icon flag-icon-{{ language }}"></i>
                                            {{ trans("Ceres::Template.header" ~ language | capitalize) }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <div class="shipping-settings">
                            <div class="list-title">
                                <strong>{{ trans("Ceres::Template.headerSelectShippingCountry") }}</strong>
                                <hr>
                            </div>
                            <shipping-country-select :disable-input="{{ services.template.isCheckout() | json_encode() }}"></shipping-country-select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



